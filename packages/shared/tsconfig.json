{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["*.ts", "types/**/*.ts", "validation/**/*.ts", "constants/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
